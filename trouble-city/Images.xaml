<ResourceDictionary x:Class="Images"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:trouble_city">
    <ImageBrush x:Key="background" ImageSource="Images/backgroundPixel.png"></ImageBrush>
    <Style x:Key="FontOptions">
        <Setter Property="TextBlock.FontSize" Value="30" />
        <Setter Property="TextBlock.Foreground" Value="Brown" />
        <Setter Property="TextBlock.VerticalAlignment" Value="Center" />
        <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
    </Style>
</ResourceDictionary>