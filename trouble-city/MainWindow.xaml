<Window x:Class="trouble_city.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:trouble_city"
        mc:Ignorable="d"
        Title="MainWindow" Height="768"  Width="1024">
    <Grid Background="{StaticResource background}">
        <Grid.RowDefinitions>
            <RowDefinition Height="8*">
            </RowDefinition>
            <RowDefinition Height="84*">
            </RowDefinition>
            <RowDefinition Height="8*"></RowDefinition>
        </Grid.RowDefinitions>
        <WrapPanel x:Name="TopMenu" Grid.Row="0" Opacity="0.5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Margin="5,0,5,0">
                <Image Source="bin/Debug/Images/save.png"></Image>
            </Button>
            <Button x:Name="ExitButton" Margin="5,0,5,0">
                <Image Source="bin/Debug/Images/exit.png"></Image>
            </Button>
        </WrapPanel>
        <WrapPanel x:Name="HealthPanel" Grid.Row="2" HorizontalAlignment="Center" >
            <Image Source="bin/Debug/Images/heart.png"></Image>
            <Image Source="bin/Debug/Images/heart.png"></Image>
            <Image Source="bin/Debug/Images/heart.png"></Image>
            <Image Source="bin/Debug/Images/heart.png"></Image>
            <Image Source="bin/Debug/Images/heart.png"></Image>
            <Image Source="bin/Debug/Images/heart.png"></Image>
        </WrapPanel>
    </Grid>
</Window>
